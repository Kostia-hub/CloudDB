<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">

    <MenuBar>
        <Menu text="Файлы на сервере:" />

    </MenuBar>
    <TextField fx:id="Feld" editable="false" HBox.hgrow="ALWAYS"/>

    <ListView fx:id="filesRList" prefWidth="248.0" VBox.vgrow="ALWAYS" />

<HBox spacing="3">
    <Button focusTraversable="false" maxWidth="Infinity" onAction="#pressOnDownloadBtn" text="Скачать файл" HBox.hgrow="ALWAYS" />
    <Button focusTraversable="false" maxWidth="Infinity" onAction="#pressOnDeleteBtn" text="Удалить файл" HBox.hgrow="ALWAYS" />
    <padding>
        <Insets bottom="1.0" left="3.0" right="3.0" top="1.0" />
    </padding>
</HBox>
   <Button mnemonicParsing="false" onAction="#pressUpdatesRList" prefHeight="15.0" prefWidth="238.0" text="Обновить" />

</VBox>
